doctype html
html(lang='en')
  head
    title Northeastern Virtual Reality
    link(rel='stylesheet', type='text/css', href='styles/main.css')

    link(rel='apple-touch-icon', sizes='180x180', href='assets/img/favicon/apple-touch-icon.png')
    link(rel='icon', href='assets/img/favicon/favicon.ico')
    link(rel='icon', type='image/png', sizes='32x32', href='assets/img/favicon/favicon-32x32.png')
    link(rel='icon', type='image/png', sizes='16x16', href='assets/img/favicon/favicon-16x16.png')
    link(rel='manifest', href='assets/img/favicon/site.webmanifest')
    link(rel='mask-icon', href='assets/img/favicon/safari-pinned-tab.svg', color='#5bbad5')
    meta(name='msapplication-TileColor', content='#da532c')
    meta(name='theme-color', content='#f10001')
    meta(property='og:image', content='https://nuvr.github.io/assets/img/og-image.png')
    meta(property='og:image:type', content='image/png')
    meta(property='og:image:width', content='956')
    meta(property='og:image:height', content='620')

    script(type='text/javascript').
      const setActivePage = pageName => {
        const linkSelector = document.querySelector(`.link#${pageName}`)
        if (linkSelector) {
          linkSelector.classList.add('active')
        }
      }
